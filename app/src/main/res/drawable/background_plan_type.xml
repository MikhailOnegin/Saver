<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:state_checked="true"
    >
    <shape
        android:shape="rectangle"
        >
        <stroke
            android:color="@color/pink"
            android:width="2dp"
            />
        <corners
            android:radius="12dp"/>
        <padding
            android:right="4dp"
            android:left="4dp"
            />
    </shape>
</item>

    <item
        >
        <shape
            android:shape="rectangle"
            >
            <stroke
                android:color="@color/border"
                android:width="2dp"
                />
            <corners
                android:radius="12dp"/>
            <padding
                android:right="4dp"
                android:left="4dp"
                />
        </shape>
    </item>
</selector>