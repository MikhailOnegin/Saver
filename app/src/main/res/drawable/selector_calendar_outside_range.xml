<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">

        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <solid android:color="@color/page" />
                    <padding android:bottom="@dimen/_8dp" android:top="@dimen/_8dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding android:left="@dimen/_8dp" android:right="@dimen/_8dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple" />
                    <corners android:radius="@dimen/_10dp" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>

        <shape android:shape="rectangle">
            <solid android:color="@color/page" />
            <padding android:bottom="@dimen/_8dp" android:top="@dimen/_8dp" />
        </shape>
    </item>
</selector>