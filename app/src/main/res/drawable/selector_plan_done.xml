<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true"
        >
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/walletGradientEnd"/>
            <corners
                android:radius="@dimen/_10dp"
                />

        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/walletGradientStart"
                android:endColor="@color/walletGradientEnd"/>
            <corners
                android:radius="@dimen/_10dp"
                />

        </shape>
    </item>
</selector>