<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleLight">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/rvItemGradientEnd" />
                    <corners android:radius="10dp" />

                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="0"
                        android:endColor="@color/rvItemGradientEnd"
                        android:startColor="@color/rvItemGradientStart" />
                    <corners android:radius="10dp" />

                </shape>
            </item>
        </selector>
    </item>
</ripple>


