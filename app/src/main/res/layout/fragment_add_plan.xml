<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/page">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarHeight"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/create_plan" />

        <Button
            android:id="@+id/button_add_plan"
            style="@style/ButtonDefaultStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" />

        <EditText
            android:id="@+id/editText_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="@drawable/background_custom_edit_text_rounded"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/_4dp"
            android:paddingLeft="@dimen/_12dp"
            android:paddingTop="@dimen/_12dp"
            android:paddingEnd="@dimen/_4dp"
            android:paddingRight="@dimen/_12dp"
            android:paddingBottom="@dimen/_12dp"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_sum_logo" />


        <EditText
            android:id="@+id/editText_description"
            style="@style/EditTextMainStyle"
            android:layout_marginTop="16dp"
            android:hint="@string/description_2"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_spending" />

        <RadioButton
            android:id="@+id/radioButton_spending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="32dp"
            android:buttonTint="@color/white"
            android:checked="true"
            android:paddingStart="@dimen/_12dp"
            android:text="@string/spend"
            android:textColor="@color/gray"
            android:textSize="@dimen/_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/imageView_up"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:contentDescription="@string/default_text"
            app:layout_constraintBottom_toBottomOf="@+id/radioButton_spending"
            app:layout_constraintStart_toEndOf="@+id/radioButton_spending"
            app:layout_constraintTop_toTopOf="@+id/radioButton_spending"
            app:srcCompat="@drawable/ic_arrow_up" />

        <RadioButton
            android:id="@+id/radioButton_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_32dp"
            android:buttonTint="@color/white"
            android:paddingStart="@dimen/_12dp"
            android:text="@string/income"
            android:textColor="@color/gray"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/radioButton_spending"
            app:layout_constraintStart_toEndOf="@+id/imageView_up"
            app:layout_constraintTop_toTopOf="@+id/radioButton_spending"
            tools:ignore="RtlSymmetry" />


        <ImageView
            android:id="@+id/imageView_down"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:contentDescription="@string/default_text"
            app:layout_constraintBottom_toBottomOf="@+id/radioButton_income"
            app:layout_constraintStart_toEndOf="@+id/radioButton_income"
            app:layout_constraintTop_toTopOf="@+id/radioButton_income"
            app:srcCompat="@drawable/ic_arrow_down" />

        <TextView
            android:id="@+id/textView_sum_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_16sp"
            android:layout_marginEnd="@dimen/_12dp"
            android:text="@string/planned_sum"
            android:textColor="@color/gray"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_incorrect_description" />

        <TextView
            android:id="@+id/textView_date_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:text="@string/plan_date"
            android:textColor="@color/gray"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_incorrect_sum" />

        <TextView
            android:id="@+id/textView_incorrect_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@drawable/background_wrong_data"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_10dp"
            android:paddingBottom="@dimen/_3dp"
            android:text="@string/incorrect_data"
            android:textSize="@dimen/_14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_description" />

        <TextView
            android:id="@+id/textView_incorrect_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@drawable/background_wrong_data"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_10dp"
            android:paddingBottom="@dimen/_3dp"
            android:text="@string/incorrect_data"
            android:textSize="@dimen/_14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_sum" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_date_logo"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>