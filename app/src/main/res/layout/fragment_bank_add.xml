<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen"
    tools:context=".presentation.fragments.bank.BankAddFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/toolbarMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|snap|enterAlways"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/add_new_bank" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/createSaver"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInput_layout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_24dp"
                app:counterEnabled="true"
                app:counterMaxLength="@integer/maxInputTextCount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/walletName"
                    style="@style/EditTextMainStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/widgetsHeight"
                    android:layout_marginTop="@dimen/_16dp"
                    android:hint="@string/saverName"
                    android:inputType="textCapSentences"
                    android:maxLength="@integer/maxInputTextCount" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:text="@string/intent"
                android:textColor="@color/gray"
                android:textSize="@dimen/_18sp" />

            <EditText
                android:id="@+id/aimMoney"
                style="@style/EditTextAlternativeStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widgetsHeight"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_24dp"
                android:background="@drawable/background_edit_text"
                android:hint="@string/sum_stub"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                tools:ignore="Autofill" />

            <TextView
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:text="@string/creation_date"
                android:textColor="@color/gray"
                android:textSize="@dimen/_18sp" />

            <Button
                android:id="@+id/walletCreateDate"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widgetsHeight"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:backgroundTint="@color/button"
                android:drawableEnd="@drawable/ic_calendar"
                android:gravity="start|center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textAppearance="@style/EditTextTextAppearance"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sp"
                android:textStyle="normal"
                app:cornerRadius="@dimen/_5dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/customTabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_24dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <View
                    android:id="@+id/tab1"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4dp"
                    android:background="@drawable/background_viewpager_indicator" />

                <View
                    android:id="@+id/tab2"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_4dp"
                    android:background="@drawable/background_viewpager_indicator" />

                <View
                    android:id="@+id/tab3"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4dp"
                    android:background="@drawable/background_viewpager_indicator" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/createSaver"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:enabled="false"
        android:text="@string/add_new_wallet_button"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll" />

</androidx.constraintlayout.widget.ConstraintLayout>