<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen"
    tools:context=".presentation.fragments.plan.PlansFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_height="@dimen/toolbarHeight"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_side_menu"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tableLayout"
        style="@style/TabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:backgroundTint="@color/background_indicator"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:tabIndicatorColor="@color/orange"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/gray"
        app:tabPaddingStart="@dimen/_8dp"
        app:tabRippleColor="@color/rvItemGradientEnd"
        app:tabPaddingEnd="@dimen/_8dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"/>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:background="@color/calculationsPanelColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/CalculationsTV.Title"
                android:id="@+id/textView_spending_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spend" />

            <TextView
                style="@style/CalculationsTV"
                android:id="@+id/textView_spending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="2 000.00"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/CalculationsTV.Title"
                android:id="@+id/textView_income_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/income"/>

            <TextView
                style="@style/CalculationsTV"
                android:id="@+id/textView_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="59 000.00"/>
        </LinearLayout>

    </LinearLayout>
    </eightbitlab.com.blurview.BlurView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingButton_add_plan"
        style="@style/FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8dp"
        app:layout_constraintBottom_toTopOf="@+id/blurView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blurView"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>