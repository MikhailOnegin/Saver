<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog_confirm"
    android:padding="@dimen/_24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12dp"
            android:text="@string/deleteWallet"
            android:textColor="@color/redGradientStartExpenses"
            android:textSize="@dimen/_22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16dp"
            android:text="@string/confirmDeleteDescription"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_32dp"
            android:text="@string/confirmDeleteWarning"
            android:textColor="@color/orange"
            android:textSize="@dimen/_18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/seekBarHeight"
            android:backgroundTint="@color/seek1"
            app:cardCornerRadius="38dp">

            <SeekBar
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/seek1"
                android:thumbOffset="@dimen/_16dp"
                android:progress="50"
                android:progressDrawable="@drawable/background_slider_seek_bar"
                android:thumb="@drawable/ic_slider_thumb"
                app:cornerRadius="@dimen/_30dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>