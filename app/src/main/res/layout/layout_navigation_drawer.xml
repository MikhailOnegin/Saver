<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/largeMargin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navViewHeaderHeight">

    <ImageView
        android:src="@drawable/stub_fact_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title"
        android:layout_marginBottom="@dimen/normalMargin"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        android:text="@string/navViewHeaderTitle"
        android:autoLink="web"
        android:textColorLink="@color/textColorGold"
        android:textSize="@dimen/navViewHeaderTextSize"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/subtitle"
        android:layout_marginBottom="@dimen/smallMargin"/>

    <TextView
        android:id="@+id/subtitle"
        android:text="@string/navViewHeaderSubtitle"
        android:textSize="@dimen/navViewHeaderTextSize"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>