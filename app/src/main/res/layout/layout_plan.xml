<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_screen">

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/background_gradient_pink_light_pink"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/_6dp"
        android:paddingTop="@dimen/_1dp"
        android:paddingEnd="@dimen/_6dp"
        android:paddingBottom="@dimen/_1dp"
        android:text="@string/default_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_plan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:background="@drawable/selector_plan_done"
        android:paddingBottom="@dimen/_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_date"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_marginStart="@dimen/_16dp"
            android:text="@string/default_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView_status"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView_spend_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:text="@string/default_text"
            android:textColor="@color/gray"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView_status"
            app:layout_constraintTop_toBottomOf="@+id/textView_category" />

        <TextView
            android:id="@+id/textView_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:text="@string/default_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView_status"
            app:layout_constraintTop_toBottomOf="@+id/textView_spend_logo" />

        <ImageView
            android:id="@+id/imageView_status"
            android:contentDescription="@string/default_text"
            android:layout_width="@dimen/rvRoundIconSize"
            android:layout_height="@dimen/rvRoundIconSize"
            android:layout_marginStart="@dimen/_8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_sum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_category"
            app:srcCompat="@drawable/ic_arrow_down" />

        <ImageView
            android:id="@+id/imageView6"
            android:contentDescription="@string/default_text"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_points" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="@dimen/_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_plan" />

    <digital.fact.saver.presentation.customviews.DotFillerView
        style="@style/DotFiller"
        android:layout_width="@dimen/_56dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintEnd_toEndOf="@+id/textView_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_date" />
</androidx.constraintlayout.widget.ConstraintLayout>