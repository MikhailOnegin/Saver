<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_plan_in_period"
    android:paddingBottom="14dp">

    <TextView
        android:id="@+id/textView_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:text="@string/default_text"
        android:textColor="@color/textColorWhite"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_status"
        app:layout_constraintEnd_toStartOf="@+id/textView_date"
        app:layout_constraintStart_toEndOf="@+id/imageView_status"
        app:layout_constraintTop_toTopOf="@+id/imageView_status"
        tools:text="Аванс" />

    <TextView
        android:id="@+id/textView_spend_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="@string/default_text"
        android:textColor="@color/textColorWhite"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_status"
        app:layout_constraintTop_toBottomOf="@+id/textView_category"
        tools:text="@string/plan_spending" />

    <TextView
        android:id="@+id/textView_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:text="@string/default_text"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_spend_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_spend_logo"
        app:layout_constraintTop_toTopOf="@+id/textView_spend_logo"
        tools:text="8000.00" />

    <ImageView
        android:id="@+id/imageView_status"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/default_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_down" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_gradient_pink_light_pink"
        android:gravity="center_horizontal"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="@string/default_text"
        android:textColor="@color/textColorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_status"
        tools:text="21.04.2021" />

</androidx.constraintlayout.widget.ConstraintLayout>