<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_plan_outside"
    android:paddingBottom="@dimen/plan_bottom_padding">

    <TextView
        android:id="@+id/textView_category"
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalMargin"
        android:layout_marginTop="@dimen/plan_done_outside_margin"
        android:layout_marginEnd="@dimen/largeMargin"
        android:textColor="@color/textColorWhite"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/textView_date"
        app:layout_constraintStart_toEndOf="@+id/imageView_status"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Аванс" />

    <TextView
        android:id="@+id/textView_sum_plan_logo"
        style="@style/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalMargin"
        android:layout_marginTop="@dimen/plan_sum_logo_top_margin"
        android:textColor="@color/textColorWhite"
        app:layout_constraintStart_toEndOf="@+id/imageView_status"
        app:layout_constraintTop_toBottomOf="@+id/textView_category"
        tools:text="@string/plan_spending_2" />

    <TextView
        android:id="@+id/textView_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalMargin"
        android:layout_marginEnd="@dimen/smallMargin"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="@dimen/text_plan_sum_xSmall_size"
        app:layout_constraintBottom_toBottomOf="@+id/textView_sum_plan_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_sum_plan_logo"
        app:layout_constraintTop_toTopOf="@+id/textView_sum_plan_logo"
        tools:text="8000.00" />

    <ImageView
        android:id="@+id/imageView_status"
        android:layout_width="@dimen/image_plan_done_outside_size"
        android:layout_height="@dimen/image_plan_done_outside_size"
        android:layout_marginStart="@dimen/normalMargin"
        app:layout_constraintBottom_toBottomOf="@+id/textView_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_date"
        app:srcCompat="@drawable/ic_arrow_up_completed"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView_date"
        style="@style/TextViewBackgroundGradientPurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_date_plan_margin"
        android:layout_marginEnd="@dimen/smallMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="21.02.2021" />

    <TextView
        android:id="@+id/textView_sum_planned_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_marginEnd="@dimen/normalMargin"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_plan_sum_logo_size"
        app:layout_constraintEnd_toStartOf="@+id/textView_sum_planned"
        app:layout_constraintStart_toStartOf="@+id/textView_sum_plan_logo"
        app:layout_constraintTop_toBottomOf="@+id/textView_sum"
        tools:text="@string/planed_income" />

    <TextView
        android:id="@+id/textView_sum_planned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/smallMargin"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_plan_sum_small_size"
        app:layout_constraintBottom_toBottomOf="@+id/textView_sum_planned_logo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10000.00" />

</androidx.constraintlayout.widget.ConstraintLayout>
