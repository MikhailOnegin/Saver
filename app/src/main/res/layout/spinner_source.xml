<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background_spinner"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widgetsHeight">

    <TextView
        android:id="@+id/title"
        android:textAppearance="@style/EditTextTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalMargin"
        tools:text="Альфабанк (кредитная)"/>

    <TextView
        android:id="@+id/subtitle"
        android:textAppearance="@style/SourceSpinnerItemSubtitleTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalMargin"
        tools:text="108 510.00"/>

</LinearLayout>