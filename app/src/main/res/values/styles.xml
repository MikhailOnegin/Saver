<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bnvTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bnvTextSize</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleTextAppearance</item>
        <item name="titleTextColor">@color/toolbarTitleTextColor</item>
        <item name="subtitleTextColor">@color/toolbarSubtitleTextColor</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/toolbarTitleTextSize</item>
    </style>

    <style name="DatePickerButton" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="icon">@drawable/ic_calendar</item>
        <item name="iconTint">@color/textColorHint</item>
        <item name="iconGravity">end</item>
        <item name="android:textAppearance">@style/EditTextTextAppearance</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/toolbarSubtitleTextSize</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowEnterAnimation">@anim/anim_enter_dialog</item>
        <item name="android:windowExitAnimation">@anim/anim_exit_dialog</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/CalendarDaySelected</item>
    </style>

    <style name="CalendarDaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/colorAccent</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="CalendarHeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CalculationsTV" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/smallMargin</item>
    </style>

    <style name="CalculationsTV.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingTop">@dimen/normalMargin</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:padding">@null</item>
    </style>

    <style name="DotFiller">
        <item name="dotSize">@dimen/_2dp</item>
        <item name="dashSize">@dimen/_2dp</item>
        <item name="dotColor">#B9BEE1</item>
    </style>

    <style name="ActionMode" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/page</item>
        <item name="backgroundSplit">@color/orange</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="closeItemLayout">@layout/abc_action_mode_close_item_material</item>
    </style>

    <style name="RecyclerView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/rv_scrollbars</item>
        <item name="android:scrollbarSize">@dimen/scrollbarsWidth</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="FAB">
        <item name="android:src">@drawable/ic_add</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="FAB.Mini">
        <item name="fabSize">mini</item>
    </style>

    <style name="EditTextMainStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textSize">@dimen/_26dp</item>
        <item name="android:background">@color/border</item>
        <item name="android:paddingLeft">@dimen/normalMargin</item>
        <item name="android:paddingEnd">@dimen/normalMargin</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_drawable</item>
    </style>

    <style name="EditTextAlternativeStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/EditTextTextAppearance</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:background">@drawable/background_round_rect_primary_dark</item>
        <item name="android:paddingLeft">@dimen/normalMargin</item>
        <item name="android:paddingEnd">@dimen/normalMargin</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_drawable</item>
    </style>

    <style name="ButtonDefaultStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerSize">0dp</item>
        <item name="android:background">@drawable/selector_btn_default</item>
        <item name="backgroundTint">@null</item>
        <item name="android:paddingBottom">@dimen/_16dp</item>
        <item name="android:paddingTop">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RadioButtonWithoutIndicator">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_radiobutton</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:paddingStart">@dimen/_12dp</item>
        <item name="android:paddingEnd">@dimen/_12dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FabOperationHint">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:elevation">@dimen/historySecondLayerElevation</item>
        <item name="android:textSize">@dimen/operationFabHintTextSize</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/radio_btn_text_color</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:buttonTint">@color/icon_radio_btn_color</item>
        <item name="android:paddingStart">@dimen/_4dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeErrorColor">@color/strokeError</item>
        <item name="boxStrokeWidthFocused">@dimen/_1dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@integer/maxInputTextCount</item>
    </style>

    <style name="KeyboardDigit">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/newOperationDigitTextSize</item>
        <item name="android:background">@drawable/background_keyboard_digit</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/SquareButtonShapeAppearance</item>
        <item name="android:backgroundTint">@color/button_tint</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAppearance">@style/SquareButtonTextAppearance</item>
        <item name="rippleColor">@color/rippleLight</item>
    </style>

    <style name="SquareButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SquareButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:textSize">@dimen/screenTextSize</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@drawable/background_spinner_popup</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="EditTextTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sourceSpinnerItemTitleTextSize</item>
    </style>

    <style name="SourceSpinnerItemSubtitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:textSize">@dimen/sourceSpinnerItemSubtitleTextSize</item>
    </style>

    <style name="DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/ripple_rect_light</item>
        <item name="android:divider">@drawable/dropdown_listview_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Calendar" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="materialCalendarHeaderLayout">@style/CalendarHeaderLayout</item>
        <item name="materialCalendarStyle">@style/CalendarStyle</item>
    </style>

    <style name="CalendarHeaderViewTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_21sp</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_19sp</item>
        <item name="android:textColor">@color/calendar_date_text_color</item>
    </style>

    <style name="MenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogTitleTextAppearance">
        <item name="android:textColor">@color/textColorRed</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="DialogMessageTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:itemBackground">@color/colorAccent</item>
        <item name="android:itemIconDisabledAlpha">0</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="popupNew" parent="android:ThemeOverlay.Material.Light">
        <item name="android:colorBackground">#ffffff</item>
    </style>

</resources>