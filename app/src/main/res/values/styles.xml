<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bnvTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bnvTextSize</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleTextAppearance</item>
        <item name="titleTextColor">@color/toolbarTitleTextColor</item>
        <item name="subtitleTextColor">@color/toolbarSubtitleTextColor</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/toolbarTitleTextSize</item>
    </style>

    <style name="DatePickerButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="icon">@drawable/ic_calendar</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@color/mtrl_outlined_stroke_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/DatePickerButtonTextAppearance</item>
    </style>

    <style name="DatePickerButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/toolbarTitleTextSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/toolbarSubtitleTextSize</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowEnterAnimation">@anim/anim_enter_dialog</item>
        <item name="android:windowExitAnimation">@anim/anim_exit_dialog</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/CalendarDaySelected</item>
    </style>

    <style name="CalendarDaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/colorAccent</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="CalendarHeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CalculationsTV" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/smallMargin</item>
    </style>

    <style name="CalculationsTV.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingTop">@dimen/normalMargin</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:padding">@null</item>
    </style>

    <style name="DotFiller">
        <item name="dotSize">@dimen/_2dp</item>
        <item name="dashSize">@dimen/_2dp</item>
        <item name="dotColor">#B9BEE1</item>
    </style>

    <style name="ActionMode" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/page</item>
        <item name="backgroundSplit">@color/orange</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="closeItemLayout">@layout/abc_action_mode_close_item_material</item>
    </style>

    <style name="RecyclerView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/rv_scrollbars</item>
        <item name="android:scrollbarSize">@dimen/scrollbarsWidth</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="FAB_Add">
        <item name="android:src">@drawable/ic_add</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="EditTextMainStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_26dp</item>
        <item name="android:background">@color/border</item>
        <item name="android:paddingLeft">@dimen/_12dp</item>
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="android:paddingRight">@dimen/_12dp</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
    </style>

    <style name="EditTextAlternativeStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:background">@color/button</item>
        <item name="android:paddingTop">@dimen/_18dp</item>
        <item name="android:paddingBottom">@dimen/_18dp</item>
        <item name="android:paddingStart">@dimen/_14dp</item>
        <item name="android:paddingEnd">@dimen/_10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawable">@drawable/background_edit_text</item>
    </style>

    <style name="ButtonDefaultStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerSize">0dp</item>
        <item name="android:background">@drawable/selector_btn_default</item>
        <item name="backgroundTint">@null</item>
        <item name="android:paddingBottom">@dimen/_16dp</item>
        <item name="android:paddingTop">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>